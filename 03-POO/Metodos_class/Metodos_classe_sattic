class Pessoa:
    def __init__(self, nome=None, idade=None):
        self.nome = nome
        self.idade = idade

    @classmethod
    def criar_de_dt_nascimento(cls, dia, mes, ano, nome):
        idade = 2025 - ano
        return cls(nome, idade)

    @staticmethod
    def maior_idade(idade):
        return idade >= 18


p = Pessoa.criar_de_dt_nascimento(20, 6, 1986, "Renan")

print(p.nome, p.idade)


print(Pessoa.maior_idade(3))
